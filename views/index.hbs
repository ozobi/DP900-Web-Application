<div class="container-flex p-4">
  <div class="row">
    <!-- Left Area -->
    <div class="col-sm-4 col-lg-3 col-xl-2">
      <!-- Refresh Panel -->
      <div class="row panelL panelRefresh pb-1">
        <div class="col-5 col-sm-12">
          <form class="form-inline">
            <div class="form-group mr-2">
              <button type="button" class="btn btn-primary panelBtn my-2" id="btnRefresh"><i class="material-icons">refresh</i></button>
            </div>
            <div class="form-group mr-2 pb-2" id="div-valRefresh">
              <label for="valRefresh" class="bmd-label-floating">Rate (s)</label>
              <input type="number" class="form-control" id="valRefresh" min="0.4" max="4" step="0.2" value="1">
            </div>
          </form>
        </div>
        <div class="col-7 col-sm-12">
          <form class="form-inline">
            <div class="form-group mr-2 pb-2">
              <label for="valIP" class="bmd-label-floating">IP Address</label>
              <input type="text" pattern="^(?:(25[0-5]|2[0-4][0-9]|1[0-9][0-9]|[1-9][0-9]|[0-9])(\.(?!$)|$)){4}$" class="form-control" id="valIP" value="127.0.0.1">
            </div>
            <div class="form-group pb-2">
              <label for="valPort" class="bmd-label-floating">Port</label>
              <input type="number" class="form-control" id="valPort" value="8732">
            </div>
          </form>
        </div>
      </div>
      <!-- Controller Only -->
      <div class="row panelL panelController my-2 py-1" style="display: none;">
        <div class="col-4 offset-2 col-sm-6 offset-sm-0">
          <div class="d-flex flex-column">
            <div class="my-1" id="panel1Txt1">Remaining:</div>
            <div class="my-1" id="panel1Txt2">At Level:</div>
            <div class="my-1" id="panel1Txt3">Total Time:</div>
          </div>
        </div>
        <div class="col-4 col-sm-6">
          <div class="d-flex flex-column">
            <div class="my-1" id="panel1Val1">-</div>
            <div class="my-1" id="panel1Val2">-</div>
            <div class="my-1" id="panel1Val3">-</div>
          </div>
        </div>
      </div>
      <div class="row panelL panelController my-2 py-1" style="display: none;">
        <div class="col-4 offset-2 col-sm-6 offset-sm-0">
          <div class="d-flex flex-column">
            <div class="my-1" id="panel2Txt1">Level:</div>
            <div class="my-1" id="panel2Txt2">Reference:</div>
            <div class="my-1" id="panel2Txt3">Control:</div>
            <div class="my-1" id="panel2Txt4">Drive:</div>
          </div>
        </div>
        <div class="col-4 col-sm-6">
          <div class="d-flex flex-column">
            <div class="my-1" id="panel2Val1">-</div>
            <div class="my-1" id="panel2Val2">-</div>
            <div class="my-1" id="panel2Val3">-</div>
            <div class="my-1" id="panel2Val4">-</div>
          </div>
        </div>
      </div>
      <!-- Analyzer Only -->
      <div class="row panelL panelAnalyzer my-2 py-1" style="display: none;">
        <div class="col-4 offset-2 col-sm-6 offset-sm-0">
          <div class="d-flex flex-column" id="panelATxt">
          </div>
        </div>
        <div class="col-4 col-sm-6 panelAnalyzer">
          <div class="d-flex flex-column" id="panelAVal">
          </div>
        </div>
      </div>
      <!-- Progress Bar -->
      <div class="row panelProgress my-2" style="display: none;">
        <div class="col">
          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 0%" id="progressbar"></div>
          </div>
        </div>
      </div>
      <!-- Buttons Panel -->
      <div class="row panelL panelBtns my-2">
        <div class="col">
          <div class="d-flex flex-row justify-content-center align-items-center py-3">
            <button type="button" class="btn btn-raised btn-sm panelBtn mx-1" id="btnInit" disabled>Init</button>
            <button type="button" class="btn btn-raised btn-sm panelBtn mx-1" id="btnStart" disabled>Start</button>
            <button type="button" class="btn btn-raised btn-sm panelBtn mx-1" id="btnResume" hidden disabled>Resume</button>
            <button type="button" class="btn btn-raised btn-sm panelBtn mx-1" id="btnStop" disabled>Stop</button>
            <button type="button" class="btn btn-raised btn-sm panelBtn mx-1" id="btnEnd" disabled>End</button>
          </div>
        </div>
      </div>
      <!-- Status Panel -->
      <div class="row panelL panelStatus my-2 py-2" style="display: none;">
        <div class="col-12" id="cmdStatus">
          <div class=""></div>
        </div>
        <div class="col-12" id="cmdState">
          <div class=""></div>
        </div>
      </div>
    </div>
    <!-- Right Area -->
    <div class="col-sm-8 col-lg-9 col-xl-10">
      <!-- Open / Close Test -->
      <form class="form-inline">
        <div class="form-group mr-2 pb-2" id="div-nameTest">
          <label for="nameTest" class="bmd-label-floating">Test Name</label>
          <input type="text" class="form-control" id="nameTest">
        </div>
        <!-- Buttons -->
        <div class="form-group bmd-form-group pb-2">
          <button type="button" class="btn btn-raised btn-primary ml-2" id="btnOpen"><i class="material-icons">folder_open</i></button>
          <button type="button" class="btn btn-raised btn-danger ml-2" id="btnClose" disabled><i class="material-icons">close</i></button>
        </div>
      </form>
      <ul class="nav nav-tabs" id="testTab" role="tablist"></ul>
      <div class="tab-content" id="testTabContent"></div>
    </div>
  </div>
</div>
